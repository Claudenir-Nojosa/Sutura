generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// MODELOS DO NEXT AUTH (OBRIGAT√ìRIOS)
model User {
  id                   String    @id @default(cuid())
  name                 String
  email                String    @unique
  emailVerified        DateTime?
  password             String?
  image                String?
  telefone             String?   @unique
  subscriptionStatus   String    @default("free")
  stripeSubscriptionId String?
  stripeCustomerId     String?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt

  // NextAuth relationships
  accounts Account[]
  sessions Session[]

  // üÜï NOVA RELA√á√ÉO COM TRANSCRI√á√ïES
  transcricoes Transcricao[]
  projetos ProjetoVideo[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Atividade {
  id             String   @id @default(cuid())
  nome           String
  horario        String?
  responsavel    String
  responsavelId  String
  responsavelImg String?
  data           DateTime
  concluida      Boolean  @default(false)
  categoria      String   @default("apuracao")
  ordem          Int?     @default(0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // üÜï NOVOS CAMPOS PARA CONTROLE DE TEMPO
  tempoEstimado  Int? // Tempo estimado em minutos
  tempoReal      Int? // Tempo real gasto em minutos
  dataInicio     DateTime? // Quando a atividade foi iniciada
  dataConclusao  DateTime? // Quando a atividade foi conclu√≠da
  emAndamento    Boolean   @default(false) // Se est√° sendo trabalhada no momento
  historicoTempo Json? // Array de sess√µes de trabalho {inicio, fim, duracao}
}

model Transcricao {
  id          String   @id @default(cuid())
  userId      String
  videoUrl    String
  videoId     String   @unique
  titulo      String
  canal       String
  duracao     String
  thumbnail   String
  views       String
  transcricao String   @db.Text
  idioma      String?  @default("pt")
  duracaoSegundos Int? // Dura√ß√£o em segundos para ordena√ß√£o
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Rela√ß√£o com usu√°rio
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
  @@index([videoId])
}

model ProjetoVideo {
  id          String   @id @default(cuid())
  userId      String
  titulo      String
  descricao   String?
  urlVideo    String?  // URL do YouTube original (para refer√™ncia)
  statusGeral String   @default("rascunho") // rascunho, em_andamento, concluido
  
  // Etapas de produ√ß√£o
  etapaSEO Json? // { titulo: string, descricao: string, tags: string[], concluido: boolean }
  etapaThumbnail Json? // { url: string, arquivo: string, concluido: boolean }
  etapaScript Json? // { conteudo: string, concluido: boolean }
  etapaEdicao Json? // { concluido: boolean, observacoes: string }
  etapaPublicacao Json? // { concluido: boolean, urlPublicada: string, dataPublicacao: DateTime }
  
  // Metadados
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Rela√ß√£o com usu√°rio
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([statusGeral])
  @@index([createdAt])
}